<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_skyblue"
    android:padding="25dp"
    tools:context=".CheckoutActivity">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:background="@drawable/backbtn"
        android:padding="10dp"
        android:layout_marginHorizontal="3dp"
        android:id="@+id/backBtn">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backimage" />
    </FrameLayout>

    <TextView
        android:id="@+id/history_text"
        android:layout_below="@id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upgrade"
        android:letterSpacing="0.02"
        android:textSize="54sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/history_text1"
        android:layout_below="@id/history_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="your experience"
        android:letterSpacing="0.01"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="-25dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/purchaselayout"
        android:layout_below="@id/history_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/profileques"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/level_starter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starter"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:textSize="34sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/level_improved_quiz1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Improved Quiz generation"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="3dp"
            android:layout_marginTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:id="@+id/purchasebutton1"
            android:background="@drawable/square_button"
            android:contentDescription="Purchase Starter plan" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaselayout1"
        android:layout_below="@id/purchaselayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/profileques"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/level_inter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Intermediate"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:textSize="34sp"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/best_seller_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Seller!"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/corners"
                android:paddingHorizontal="20dp"

                android:paddingVertical="6dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/level_improved_quiz2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More advanced quiz generation"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="3dp"
            android:layout_marginTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:background="@drawable/square_button"
            android:contentDescription="Purchase Intermediate plan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaselayout3"
        android:layout_below="@id/purchaselayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/profileques"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/level_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:textSize="34sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/level_improved_quiz3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expert level quiz generation"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="3dp"
            android:layout_marginTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:background="@drawable/square_button"
            android:contentDescription="Purchase Advanced plan" />
    </LinearLayout>

</RelativeLayout>
