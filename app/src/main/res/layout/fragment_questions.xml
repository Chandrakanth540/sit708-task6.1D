<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_skyblue"
    android:padding="20dp"
    tools:context=".Questions">



    <RelativeLayout
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03fff1"
            android:paddingVertical="3dp"
            android:paddingHorizontal="7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/black_ai"
                android:layout_marginEnd="8dp"
                android:contentDescription="AI Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generated by AI"
                android:textSize="17sp"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Task Title -->
        <TextView
            android:id="@+id/head2"
            android:layout_below="@id/head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Generated Task 1"
            android:textSize="36sp"
            android:letterSpacing="0.01"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_below="@id/head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Small description for the generated task"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            android:letterSpacing="0.02"
            android:paddingHorizontal="13dp"
            android:paddingVertical="3dp"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"

android:progressTint="#A61111"

            android:layout_centerHorizontal="true"
       android:layout_marginTop="400dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/progresstext"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Loading..."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/progress_bar"/>

        <!-- Question 1 -->
        <FrameLayout
            android:id="@+id/question_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/checkboxes"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                   android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Question 1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. What is the capital of France?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="2dp" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/option_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A. Berlin"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/option_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B. Paris"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/option_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C. Madrid"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:padding="10dp" />
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>

        <!-- Preview of Question 2 -->
        <LinearLayout
            android:id="@+id/question2_preview_frame"
            android:layout_below="@id/question_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/checkboxes"

            android:padding="10dp">

            <TextView
                android:id="@+id/question2_preview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:textSize="20sp"
                android:textStyle="bold"

                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/expand_button1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow"

                android:background="@drawable/rect_back"
                android:contentDescription="Expand Button" />
        </LinearLayout>

        <!-- Expandable Full Question 2 -->
        <FrameLayout
            android:id="@+id/question2_full_frame"
            android:layout_below="@id/question2_preview_frame"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/checkboxes"

                android:padding="10dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Question 2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. What is the largest planet in our solar system?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="5dp" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/option2_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A. Earth"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/option2_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B. Jupiter"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/option2_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C. Mars"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:padding="10dp" />
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>

        <!-- Preview of Question 3 -->
        <LinearLayout
            android:id="@+id/question3_preview_frame"
            android:layout_below="@id/question2_full_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/checkboxes"
            android:visibility="gone"
            android:padding="10dp">

            <TextView
                android:id="@+id/question3_preview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/expand_button2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow"
                android:background="@drawable/rect_back"
                android:contentDescription="Expand Button" />
        </LinearLayout>

        <!-- Expandable Full Question 3 -->
        <FrameLayout
            android:id="@+id/question3_full_frame"
            android:layout_below="@id/question3_preview_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/checkboxes"
                android:padding="10dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Question 3"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="3. Which language is primarily used for Android app development?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="5dp" />

                <RadioGroup
                    android:id="@+id/radioGroup3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/option3_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A. Python"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/option3_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B. Java"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/option3_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C. Swift"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:padding="10dp" />
                </RadioGroup>
            </LinearLayout>


        </FrameLayout>
        <Button
            android:layout_below="@+id/question3_full_frame"
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
           android:layout_marginTop="40dp"
            android:text="Submit"
            android:textSize="20sp"
            android:padding="20dp"
            android:backgroundTint="#03ff75"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAllCaps="false" />
    </RelativeLayout>


</ScrollView>
